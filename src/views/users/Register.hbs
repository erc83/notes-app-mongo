{{>Errors}}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1>Account Register</h1>
            </div>
            <img src="/public/img/LogoEric.png" class="rounded-circle mx-auto d-block m-4 logo" alt="Logo">
            
            <div class="card-body">
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Password confirm" value="{{confirm_password}}">
                    </div>
                    <div class="form-group item-center mx-auto">
                        <button class="btn btn-primary " type="submit">Register</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>